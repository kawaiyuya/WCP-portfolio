<h1>新規スペース投稿ページだよ</h1>


<%= form_for(@space) do |f| %>

	<%= f.label "画像" %>
	<%= f.attachment_field :space_images_images, multiple: true %>
	<!-- 複数できるように -->

	<%= f.label "スペース" %>
	<%= f.text_field :name %>

	<%= f.label "スペース説明" %>
	<%= f.text_area :description %>


  	<% if @space.errors.any? %>
      <h2><%= pluralize(@space.errors.count, "error") %> prohibited this map from being saved:</h2>
      <% @space.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
  	<% end %>


	<%= f.label "住所" %>
    <%= f.text_field :addres %>


	<%= f.label "人数" %>
	<%= f.number_field :capacity %>

	<%= f.label "金額" %>
	<%= f.text_field :price %>



	<%= f.submit "登録"%>
<% end %>
