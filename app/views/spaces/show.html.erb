<h1>スペース詳細/編集画面だよ</h1>
<% if user_signed_in? && current_user.id == @space.lender_id %>
<!--  loginかつ自分の -->
  <%= form_for (@space),url:space_images_deleate_path do |f| %>
        <% @space.space_images.each do |image| %>
            <%= attachment_image_tag image, :image,fallback: "no_image.jpg",size:'700x400'%>
            <%= f.check_box :image_id, {multiple: true}, image.id %>
        <% end %>
            <%=f.submit "削除"%>
  <% end %>

    <%= form_for @space do |f| %>

        <%= @space.name %>
        <%= f.text_field :name %><br>

        料金：<%= @space.price %>/１時間
             <%= f.text_field :price %><br>


        説明：<%= @space.description %>
             <%= f.text_area :description %><br>

        住所：<%= @space.addres %>
             <%= f.text_field :addres %><br>

        収容人数：<%= @space.capacity %>
                 <%= f.number_field :capacity %><br>

        ジャンル：<% @categories.each do |category| %>
                <%= category.genre.name %>
                    <%= form_for category do |f| %>
                    <% end %>
                    <%= f.select :name,@genres_array %>
                    <% end %>


        アメニティー：<% @facilitys.each do |facility| %>
                    <%= facility.amenitie.name %><br>

                    <%= form_for facility do |f| %>
                    <% end %>
                    <%= f.select :name,@amenities_array %>
                    <% end %>



          <%= f.submit "編集"%>
          <%= link_to'このスペースを削除する',space_path(@space.id), method: :delete, "data-confirm" => "削除しますか？" %>
      <% end %>
    <%= link_to "ユーザー情報",user_path(current_user.id) %>

<% elsif user_signed_in? %>

    <!-- loginかつ他の -->
      <% @space.space_images.each do |image| %>
            <%= attachment_image_tag image, :image,fallback: "no_image.jpg",size:'700x400'%>
      <% end %>

      <% if @space.favorited_by?(current_user) %>
        <li>
          <%= link_to space_favorites_path(@space), method: :delete do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= @space.favorites.count %> お気に入り
            <% end %>
        </li>
        <% else %>
        <li>
          <%= link_to space_favorites_path(@space), method: :post do %>
            <i class="fa fa-heart-o" aria-hidden="true"></i>
            <%= @space.favorites.count %> お気に入り
          <% end %>
        </li>
      <% end %>

        <%= link_to "オーナー情報", user_path(@space.lender_id) %>
        <%=@user.nickname %>さん
        <%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg",size:'100x100' %>
        
        <%= link_to "予約画面へ",new_space_reservations_path(@space) %>


        <%= @space.name %><br>
        料金：<%= @space.price %>/１時間<br>
        説明：<%= @space.description %><br>
        住所：<%= @space.addres %><br>
        収容人数：<%= @space.capacity %><br>

        <% @categories.each do |category| %>
        <%= category.genre.name %>
        <% end %>

  <% else %>
    <!-- loginしてない -->
    <% @space.space_images.each do |image| %>
          <%= attachment_image_tag image, :image,fallback: "no_image.jpg",size:'700x400'%>
          <% end %>
          <%= @space.name %><br>
    料金：<%= @space.price %>/１時間<br>
    説明：<%= @space.description %><br>
    住所：<%= @space.addres %><br>
    収容人数：<%= @space.capacity %><br>

      <% @categories.each do |category| %>
        ジャンル：<%= category.genre.name %>
      <% end %>

  <% end %>
