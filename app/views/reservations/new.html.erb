<h1>reservation</h1>

<div class="container-fluid">
 	<div class="row sampleRow">
    	<div class="col-md-1">
    	</div>
    	  <div class="col-md-10">
			<div class="reservation-box">

				<div class="date-box">
					<p class="date">date</p>

					<div class="row sampleRow">
	    				<div class="col-md-3">
	    				</div>
	    				  <div class="col-md-6">
							  <div class="date-select-box">
							    <%= form_for (@reservation), url: space_reservations_path do |f| %>
								    <%= f.date_select :reservation_date, {}, class: 'form-control'%>
							  </div>
	    				  </div>
	    				<div class="col-md-3">
	    				</div>
    				</div>	
				</div>
				
				  <div class="row sampleRow">
					<div class="col-md-3">
					</div>

					<div class="col-md-6">
						<div class="time-box">
							<p class="time">time</p>
								<div class="time-select-box">
									<div class="time-tabel start">
										<div class="start-box">
										  <%= f.label "start-time",class: "label-start" %>
										  <div class="time-time"><%= f.time_select :start_time,{minute_step: 60} %></div>
										</div>
									</div>

									<div class="time-table finish">
										<div class="finsh-box">
								      	  <%= f.label "finish-time",class: "label-finish" %>
									  	  <div class="time-time"><%= f.time_select :finish_time,{minute_step: 60} %></div>
									  	</div>
									</div>
									<%= f.submit "reserve",class: "reservate-btn"%>
									</div>
								<% end %>
						</div>
					</div>

					<div class="col-md-3">
					</div>


		  </div>
		<div class="col-md-1">
    	</div>
    </div>
</div>